    h2 Blog Page
    ul.breadcrumb
      li.breadcrumb-item
        a(href='index.html') Home
      li.breadcrumb-item
        a(href='index.html#blog') Blog
      li.breadcrumb-item.active Single Post
  // /header wrapper
// /Header
include blog/blog.pug
include blog/footer.pug
// Back to top
#back-to-top
// /Back to top
// Preloader
#preloader
  .preloader
    span
    span
    span
    span
// /Preloader
